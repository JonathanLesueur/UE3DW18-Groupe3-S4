{% extends "layout.html.twig" %}

{% block title %}Résultat(s) pour "{{ tag.title }}" {% endblock %}

{% block content %}
	<div class="row tag">
		<h1>Résultat(s) associé(s) au tag "{{ tag.title }}"</h1>
		{% if links|length <= 0 %}
			<p>
				Aucun résultat ne correspond au tag "{{ tag.title }}".
			</p>
		{% else %}
			{% for link in links %}
                <div class="col-md-4">
                    <div class="link-container">
                        <h2><a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a></h2>
                        <p>{{ link.desc }} <em>(by {{ link.user.username }})</em></p>

                        <div class="link-tags">
                            {% for tag in link.tags %}
                                <a href="{{ path('tag', { 'id': tag.id }) }}" title="Filtrer">
                                    {{ tag.title }}
                                </a>
                            {% endfor %}
                        </div>
                        
                        <a href="{{ link.url }}" title="" class="watson-button" target="_blank">Open</a>
                    </div>
                </div>
			{% endfor %}
		{% endif %}
	</div>
{% endblock %}
