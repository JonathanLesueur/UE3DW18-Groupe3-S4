{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<div class="form-container">
    <h2 class="text-center">{{ block('title') }}</h2>
{{ form_start(linkForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        {{ form_label(linkForm.url, null, { 'label_attr':  {
            'class': 'col-sm-2 control-label'
        }}) }}
        <div class="col-sm-8">
            {{ form_errors(linkForm.url) }}
            {{ form_widget(linkForm.url, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(linkForm.title, null, { 'label_attr':  {
            'class': 'col-sm-2 control-label'
        }}) }}
        <div class="col-sm-8">
            {{ form_errors(linkForm.title) }}
            {{ form_widget(linkForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(linkForm.desc, null, { 'label_attr':  {
            'class': 'col-sm-2 control-label'
        }}) }}
        <div class="col-sm-8">
            {{ form_errors(linkForm.desc) }}
            {{ form_widget(linkForm.desc, { 'attr':  {
                'class': 'form-control',
                'rows': '8'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(linkForm.tags, null, { 'label_attr':  {
            'class': 'col-sm-2 control-label'
        }}) }}
        <div class="col-sm-8">
            {{ form_errors(linkForm.tags) }}
            {{ form_widget(linkForm.tags, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-2">
            <input type="submit" class="watson-button form-button" value="Save" />
        </div>
    </div>
{{ form_end(linkForm) }}
</div>
{% endblock %}
